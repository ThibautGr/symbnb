{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard admin!{% endblock %}

{% block body %}
    <div class="contain-fuild">
        <div class="row">
            <div class="col-3">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">
                                    Nombre d'annonces {{ stats.ads }}
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">
                                    Nombre d'utilisateur {{ stats.users }}
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">
                                    Nombre de r√©servation {{ stats.bookings }}
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">
                                    Nombre de commentaires {{ stats.comments }}
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="alert alert-success">
                    <h2 class="alert-heading my-3">
                        <table class="table table-hover">
                            <thead>
                                <th>Annonces</th>
                                <th>Proprio</th>
                                <th>Moyenne</th>
                            </thead>
                            <tbody>
                            {% for ad in bestAds  %}
                                <tr>
                                <td>{{ ad.title }}</td>
                                <td>{{ ad.firstName }} {{ ad.lastName }}</td>
                                <td>{{ ad.note |number_format(1, ",","") }} </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </h2>
                </div>
            </div>
            <div class="col-6">
                <div class="alert alert-danger">
                    <h2 class="alert-heading my-3">
                        <table class="table table-hover">
                            <thead>
                            <th>Annonces</th>
                            <th>Proprio</th>
                            <th>Moyenne</th>
                            </thead>
                            <tbody>
                            {% for ad in worstAds  %}
                                <tr>
                                    <td>{{ ad.title }}</td>
                                    <td>{{ ad.firstName }} {{ ad.lastName }}</td>
                                    <td>{{ ad.note |number_format(1, ",","") }} </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </h2>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
