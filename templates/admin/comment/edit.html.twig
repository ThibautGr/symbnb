{% extends 'admin/base.html.twig' %}
{% form_theme form _self %}
{% block title %}Administration de commentaire n°{{ comment.id }}{% endblock %}

{% block body %}
    <div class="container-fluid text-center">
        <div class="row justify-content-center">
            <div class="col-5">
                <div class="card-head">
                    <h2 class="my-5">Gestion du commentaire : n°{{ comment.id }}</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="card bg-light">
                        {{ form_widget(form) }}
                    </div>
                    <button type="submit" class="btn btn-primary">Validé</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block _ad_images_widget %}
    {{ form_widget(form) }}
{% endblock %}
