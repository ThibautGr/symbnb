{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations!{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h1 class="my-5">Gestion des réservation</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>id</th>
                <th>Commenditaire</th>
                <th>comment</th>
                <th>durée</th>
                <th>Prix</th>
                <th>date de réservation</th>
            </tr>
            </thead>

            <tbody>
            {% for booking in bookings %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.booker }}</td>
                    <td>{{ booking.comment }}</td>
                    <td>{{ booking.duration }}</td>
                    <td>{{ booking.amount }}€ </td>
                    <td>{{ booking.createAt | date('d/m/Y') }}</td>
                    <td class="d-flex">
                        <a href="{{ path('admin_bookings_edit',{'id': booking.id}) }}" class="btn btn-primary m-lg-1"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_booking_delete',{'id':booking.id}) }}" class="m-lg-1 btn btn-primary"><i class=" fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% include 'admin/partials/_pagination.html.twig' with {'route':'admin_bookings'}  %}
    </div>

{% endblock %}
